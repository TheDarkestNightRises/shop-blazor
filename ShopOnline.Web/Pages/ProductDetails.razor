@page "/ProductDetails/{Id:int}"
@inherits ProductDetailsBase

@if (Product is null && ErrorMesage is null)
{
	<h3> LOADING...</h3>
}
else if (ErrorMesage != null) 
{
	<h3 class="text-danger"> @ErrorMesage </h3>
}
else 
{
	<h3 class="mb-5"> Product Details </h3>
	<div class="row">
		<div class="col-md-6 mb-4">
			<img class="img-fluid" src="@Product.ImageURL">
		</div>
		<div class="col-md-6">
			<h3>@Product.Name</h3>
			<p class="mb-4">@Product.Description</p>
			<p class="mb-4">
				<b> 
					@Product.Price.ToString("C"); (@Product.Qty items in stock)
				</b>
			</p>
			<button class="bg-danger"> Add to cart </button>
		</div>
	</div>


}